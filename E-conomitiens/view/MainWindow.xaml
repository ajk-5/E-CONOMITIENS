<Window x:Class="E_conomitiens.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window" Height="200" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Images/background.png" Opacity="0.15"></ImageBrush>
    </Window.Background> 

    <Grid>


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
  
            <Button Content="Login" Width="150" Margin="5" Click="LoginButton_Click"/>
            <Button Content="Register" Width="150" Margin="5" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>