                    Height="25"
                    Margin="59,309,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="9"
                    Style="{StaticResource lightWhiteBlock}"
                    TextWrapping="Wrap" />
                <TextBlock
                    Width="90"
                    Height="25"
                    Margin="47,272,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Style="{StaticResource lightWhiteBlock}"
                    Text="Humidité"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="Humidity1_2"
