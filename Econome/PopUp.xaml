                    Height="25"
                    Margin="59,334,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="9"
                    Style="{StaticResource lightWhiteBlock}"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="Humidity1_3"
                    Width="188"
                    Height="25"
                    Margin="59,364,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="9"
                    Style="{StaticResource lightWhiteBlock}"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="Temp2_1"
                    Width="188"
                    Height="24"
                    Margin="284,177,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="9"
                    Style="{StaticResource lightWhiteBlock}"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="Temp2_2"
                    Width="188"
                    Height="24"
                    Margin="284,206,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="9"
                    Style="{StaticResource lightWhiteBlock}"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="Temp2_3"
                    Width="188"
                    Height="24"
                    Margin="284,235,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="9"
                    Style="{StaticResource lightWhiteBlock}"
                    TextWrapping="Wrap" />
                <TextBlock
                    Width="90"
                    Height="24"
                    Margin="272,272,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Style="{StaticResource lightWhiteBlock}"
                    Text="Humidité"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="Humidity2_1"
                    Width="188"
                    Height="25"
                    Margin="284,309,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="9"
                    Style="{StaticResource lightWhiteBlock}"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="Humidity2_2"
                    Width="188"
                    Height="25"
                    Margin="284,334,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="9"
                    Style="{StaticResource lightWhiteBlock}"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="Humidity2_3"
                    Width="188"
                    Height="25"
                    Margin="284,364,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="9"
                    Style="{StaticResource lightWhiteBlock}"
                    TextWrapping="Wrap" />
                <TextBlock
                    Width="90"
                    Height="25"
                    Margin="272,146,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Style="{StaticResource lightWhiteBlock}"
                    Text="Température"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="date3"
                    Width="90"
                    Height="25"
                    Margin="495,124,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="9"
                    Style="{StaticResource opacity0.5}"
                    TextWrapping="Wrap" />
                <TextBlock
                    Width="247"
                    Height="25"
                    Margin="495,144,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Style="{StaticResource lightWhiteBlock}"
                    Text="Température en fonction du temps"
                    TextWrapping="Wrap" />
            </Grid>
        </Viewbox>
    </Grid>
</Window>